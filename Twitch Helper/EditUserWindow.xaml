<Window x:Class="Twitch_Helper.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twitch_Helper"
        mc:Ignorable="d"
        Title="Username" Height="100" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="20" Margin="0,0,0,0"/>
        <Button x:Name="UsernameSaveButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="20" Margin="0,75,0,0" Content="Save" FontWeight="Bold" Click="UsernameSaveButton_Click"/>
    </Grid>
</Window>
