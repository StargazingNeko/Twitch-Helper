<Window x:Class="Twitch_Helper.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twitch_Helper"
        mc:Ignorable="d"
        Title="Decrypt OAuth" Height="175" Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <PasswordBox x:Name="OAuthPasswordBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="20" Margin="0,0,0,0" Password=""/>
        <TextBlock x:Name="PasswordMessage" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Margin="0,0,0,75" Text="Please enter your password to decrypt your OAuth key." TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold"/>
        <Button x:Name="PassOKButton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="20" Margin="0,75,0,0" Content="OK" FontWeight="Bold" Click="PassOKButton_Click"/>
    </Grid>
</Window>
